{
  "name": "sourcegraph",
  "displayName": "Sourcegraph",
  "description": "Sourcegraph for VS Code",
  "version": "1.0.16",
  "publisher": "sourcegraph",
  "license": "MIT",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-vscode.git"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.open",
    "onCommand:extension.search"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.open",
        "title": "Sourcegraph: Open"
      },
      {
        "command": "extension.search",
        "title": "Sourcegraph: Search"
      }
    ],
    "keybindings": [
      {
        "command": "extension.open",
        "key": "alt+a",
        "mac": "alt+a",
        "when": "editorFocus"
      },
      {
        "command": "extension.search",
        "key": "alt+s",
        "mac": "alt+s",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sourcegraph extension configuration",
      "properties": {
        "sourcegraph.url": {
          "type": [
            "string"
          ],
          "default": "https://sourcegraph.com",
          "description": "The base URL of the Sourcegraph instance to use."
        },
        "sourcegraph.remoteUrlReplacements": {
          "type": [
            "object"
          ],
          "default": {},
          "description": "For each item in this object, replace key with value in the remote url."
        }
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": "sourcegraph-vscode.vsix"
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "sourcegraph-vscode.vsix"
      }
    ]
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "prettier": "prettier \"**/*.{ts,js,json,md,yml}\" --list-different --write",
    "prettier-check": "npm run prettier -- --write=false",
    "eslint": "eslint 'src/**/*.ts'",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc mocha --require source-map-support/register --package package.json"
  },
  "nyc": {
    "require": "ts-node/register",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "mocha": {
    "recursive": true,
    "timeout": 200,
    "watch-extensions": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/**/*.test.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@sourcegraph/eslint-config": "^0.23.0",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/node": "12.20.7",
    "@types/vscode": "1.52.0",
    "eslint": "^7.23.0",
    "husky": "^4.3.6",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.0",
    "semantic-release-vsce": "^3.0.1",
    "typescript": "^4.1.3",
    "vsce": "^1.81.1"
  },
  "dependencies": {
    "@types/mocha": "8.2.0",
    "execa": "^5.0.0",
    "mocha": "^8.3.0",
    "open": "^7.3.0",
    "ts-node": "^9.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
